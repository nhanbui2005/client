<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="50px"
            android:layout_height="60px"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Tạo tài khoản"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Tên của bạn là"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/ground1"
        android:padding="12dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Thông tin này hiển thị trên Hồ sơ Spotify của bạn."
        android:textColor="#BDBDBD"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvHint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Điều khoản sử dụng"
        android:textColor="#4CAF50"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvHint2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Chính sách quyền riêng tư"
        android:textColor="#4CAF50"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:text="Chia sẻ dữ liệu đăng ký của tôi với các nhà cung cấp nội dung của Spotify cho mục đích tiếp thị."
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:orientation="horizontal">



        <CheckBox
            android:id="@+id/cb1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:buttonTint="#1DB954"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chia sẻ dữ liệu đăng ký của tôi với các nhà cung cấp nội dung của Spotify cho mục đích tiếp thị."
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <CheckBox
            android:id="@+id/cb2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:buttonTint="#1DB954"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chia sẻ dữ liệu đăng ký của tôi với các nhà cung cấp nội dung của Spotify cho mục đích tiếp thị."
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <Button
        android:id="@+id/btndangky"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/buttonregister"
        android:text="Tạo tài khoản"
        android:textStyle="bold"
        app:backgroundTint="@null" />

</LinearLayout>
